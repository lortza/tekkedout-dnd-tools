<div id="new-combatant" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">New Combatant</h4>
      </div>

      <%= form_for @new_combatant do |nc| %>
        <div class="modal-body">
          <h3>Combatant Info</h3>
          <%= nc.hidden_field :combat_tracker_id, value: @combat_tracker.id %>
          <div class="row">
            <div class="form-group col-xs-10">
              <%= nc.label :name %>
              <%= nc.text_field :name, class: "form-control" %>
            </div>
          </div>

          <div class="row">
            <div class="form-group col-xs-2">
              <%= nc.label :init %>
              <%= nc.text_field :init, { type: "number", class: "form-control" } %>
            </div>
            <div class="form-group col-xs-2">
              <%= nc.label :max_hp, "Max HP" %>
              <%= nc.text_field :max_hp, { type: "number", class: "form-control" } %>
            </div>
            <div class="form-group col-xs-2">
              <%= nc.label :hp, "HP" %>
              <%= nc.text_field :hp, { type: "number", class: "form-control" } %>
            </div>
            <div class="form-group col-xs-2">
              <%= nc.label :ac, "AC" %>
              <%= nc.text_field :ac, { type: "number", class: "form-control" } %>
            </div>
            <div class="form-group col-xs-2">
              <%= nc.label :dc, "Spell DC" %>
              <%= nc.text_field :dc, { type: "number", class: "form-control" } %>
            </div>
          </div>
        </div>

        <div class="modal-footer">
          <%= nc.submit "Save", class: "btn btn-primary" %>
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        </div>
      <% end %>
    </div>
  </div>
</div>


