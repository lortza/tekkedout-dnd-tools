<% content_for :title, params[:action] == :new ? "New" : "Edit" %>

<% content_for :content_size, "col-sm-9 col-md-10" %>

<% content_for :content do %>
  <%= render partial: "combat_trackers/new_combatant_modal", combat_tracker: @combat_tracker %>

  <%= javascript_tag do %>
    var data = data || {};
    data.combat_tracker = <%= @combat_tracker.to_json.html_safe %>;
    addCombatantRows();
  <% end %>

  <%= form_for @combat_tracker, method: :patch do |f| %>

    <div class="row">
      <div class="col-xs-6">
        <div class="form-group">
          <%= f.label :name, "Combat Tracker Name" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
    </div>

    <h4>Combatants information</h4>

    <div class="row">
      <div class="col-xs-12">
        <div class="form-group">
          <table class="table table-striped combatant-table">
            <thead>
              <tr>
                <td>Name</td>
                <td>Init</td>
                <td>Max HP</td>
                <td>HP</td>
                <td>AC</td>
                <td>Spell DC</td>
              </tr>
            </thead>
            <tbody>
              <% if @combat_tracker.combatants.present? %>
                <%= f.fields_for :combatants do |ff| %>
                  <tr class="combatant-row">
                    <td class="col-xs-4"><%= ff.text_field :name, class: "form-control" %></td>
                    <td><%= ff.text_field :init, { type: "number", class: "form-control" } %></td>
                    <td><%= ff.text_field :max_hp, { type: "number", class: "form-control" } %></td>
                    <td><%= ff.text_field :hp, { type: "number", class: "form-control" } %></td>
                    <td><%= ff.text_field :ac, { type: "number", class: "form-control" } %></td>
                    <td><%= ff.text_field :dc, { type: "number", class: "form-control" } %></td>
                    <td>
                      <%= link_to combatant_path(ff.object), method: :delete, class: "btn btn-danger pull-right", data: confirm(title: "Delete combatant?") do %>
                        <span class="glyphicon glyphicon-trash"></span>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              <% end %>

              <%= f.fields_for :combatants, @combat_tracker.combatants.build do |nc| %>
                <tr class="combatant-row">
                  <td class="col-xs-4"><%= nc.text_field :name, class: "form-control" %></td>
                  <td><%= nc.text_field :init, { type: "number",class: "form-control" } %></td>
                  <td><%= nc.text_field :max_hp, { type: "number",class: "form-control" } %></td>
                  <td><%= nc.text_field :hp, { type: "number",class: "form-control" } %></td>
                  <td><%= nc.text_field :ac, { type: "number",class: "form-control" } %></td>
                  <td><%= nc.text_field :dc, { type: "number",class: "form-control" } %></td>
                  <td>
                    <%= button_tag "Save", type: "submit", class: "btn btn-primary" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12">
        <div class="form-group">
          <button id="add-combatant-row" type="button" class="btn btn-default" data-toggle="modal" data-target="#new-combatant">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add Combatant
          </button>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12">
        <div class="form-group">
          <%= button_tag "Save", type: "submit", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
