<% local_assigns.fetch(:messages, flash).each do |type, messages| %>
  <% Array.wrap(messages).each do |message| %>
    <% if message.present? %>
      <div class="alert <%= bootstrap_class_for(type) %> alert-dismissible bottom0" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>
